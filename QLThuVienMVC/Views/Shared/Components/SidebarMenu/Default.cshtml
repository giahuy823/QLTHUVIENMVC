@{
    var isCollapsed = Context.Request.Cookies["sidebarCollapsed"] == "true";
}

<style>
    .sidebar {
    width: 250px;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background-color: #f8f9fa;
    border-right: 1px solid #dee2e6;
    padding: 20px;
    transition: all 0.3s;
    z-index: 1000;
    margin-top: 56px; /* Chiều cao của navbar */
    }

    .sidebar.collapsed {
    width: 60px;
    }

    .sidebar.collapsed .menu-text {
        display: none;
    }

    .sidebar .nav-item {
    margin-bottom: 10px;
    }

    .sidebar .nav-link {
    color: #333;
    display: flex;
    align-items: center;
    padding: 8px 10px;
    border-radius: 4px;
    }

    .sidebar .nav-link:hover {
        background-color: #e9ecef;
    }

    .sidebar .nav-link i {
        margin-right: 10px;
        width: 20px;
        text-align: center;
    }

    .sidebar.collapsed .nav-link i {
    margin-right: 0;
    }

    .toggle-btn {
    position: absolute;
    right: -15px;
    top: 20px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: #fff;
    border: 1px solid #dee2e6;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    }

    .main-content {
    margin-left: 250px;
    transition: all 0.3s;
    }

    .sidebar.collapsed ~ .main-content {
    margin-left: 60px;
    }
</style>

<div class="sidebar @(isCollapsed ? "collapsed" : "")" id="sidebar">
    <button class="toggle-btn" id="toggleSidebar">
        <i class="fas @(isCollapsed ? "fa-chevron-right" : "fa-chevron-left")"></i>
    </button>

    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i>
                <span class="menu-text">Trang chủ</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="PhieuMuonSach" asp-action="PhieuMuonSach">
                <i class="fas fa-book"></i>
                <span class="menu-text">Mượn sách</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="DocGia" asp-action="Index">
                <i class="fas fa-users"></i>
                <span class="menu-text">Thông tin độc giả</span>
            </a>
        </li>
        <!-- Thêm các mục menu khác tại đây -->
    </ul>
</div>

<script>
    document.getElementById('toggleSidebar').addEventListener('click', function() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('collapsed');

        // Lưu trạng thái vào cookie
        const isCollapsed = sidebar.classList.contains('collapsed');
        document.cookie = `sidebarCollapsed=${isCollapsed}; path=/`;

        // Đổi icon
        this.querySelector('i').className = isCollapsed ? 'fas fa-chevron-right' : 'fas fa-chevron-left';
    });
</script>