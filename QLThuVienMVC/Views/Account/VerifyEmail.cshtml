@using QLThuVienMVC.ViewModels;
@model VerifyEmailViewModel;
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <div class="text-center mb-4">
            <i class="fas fa-book-open fa-3x text-primary mb-3"></i>
            <h2 class="fw-bold">@ViewData["Title"]</h2>
        </div>

        <form asp-action="VerifyEmail" asp-controller="Account" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email" required />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

         
            <button type="submit" value="Verify" class="btn btn-success w-100 py-2 mb-3">
                <i class="fas fa-sign-in-alt me-2"></i> Xác minh
                </button>
        </form>
            <div class="text-center mt-3">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-sm" class="text-center">
                    <i class="fas fa-arrow-left me-1"></i> Trở về trang chủ
                </a>
            </div>
       
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        document.querySelector('form').addEventListener('submit', function() {
            const btn = document.querySelector('button[type="submit"]');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Đang xử lý...';
            btn.disabled = true;
        });
    </script>
}