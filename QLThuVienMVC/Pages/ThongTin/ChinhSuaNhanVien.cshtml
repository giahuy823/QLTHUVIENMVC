@page
@model QLThuVienMVC.Pages.ThongTin.ChinhSuaNhanVienModel

<div class="container py-5">
    <h3 class="mb-4 text-primary fw-bold">Chỉnh sửa thông tin Nhân viên</h3>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
   

    <form method="post" asp-page-handler="Update">
        <div class="card shadow rounded-4 p-4 bg-light">
            <input type="hidden" asp-for="NhanVien.MaNhanVien" />

            @if (Model.NhanVien.User != null)
            {
                <input type="hidden" asp-for="NhanVien.User.Id" />
            }

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NhanVien.MaNhanVien" class="form-label">Mã nhân viên</label>
                    <input asp-for="NhanVien.MaNhanVien" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="NhanVien.HoTen" class="form-label">Họ tên</label>
                    <input asp-for="NhanVien.HoTen" class="form-control" />
                    <span asp-validation-for="NhanVien.HoTen" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NhanVien.NgaySinh" class="form-label">Ngày sinh</label>
                    <input asp-for="NhanVien.NgaySinh" type="date" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="NhanVien.DiaChi" class="form-label">Địa chỉ</label>
                    <input asp-for="NhanVien.DiaChi" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="NhanVien.BoPhan" class="form-label">Bộ phận</label>
                    <input asp-for="NhanVien.BoPhan" class="form-control" readonly />
                </div>
                <div class="col-md-6">
                    <label asp-for="NhanVien.BangCap" class="form-label">Bằng cấp</label>
                    <input asp-for="NhanVien.BangCap" class="form-control" />
                </div>
            </div>

            @if (Model.NhanVien.User != null)
            {
                <hr class="my-3" />
                <h5 class="fw-bold text-secondary">Thông tin tài khoản</h5>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NhanVien.User.UserName" class="form-label">Username</label>
                        <input asp-for="NhanVien.User.UserName" class="form-control" readonly />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NhanVien.User.Email" class="form-label">Email đăng nhập</label>
                        <input asp-for="NhanVien.User.Email" type="email" class="form-control" readonly />
                        <span asp-validation-for="NhanVien.User.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="NhanVien.User.PhoneNumber" class="form-label">Số điện thoại</label>
                        <input asp-for="NhanVien.User.PhoneNumber" class="form-control" />
                    </div>
                </div>
            }

            <div class="d-flex justify-content-end mt-4">
                <a asp-page="/ThongTin/ThongTin" class="btn btn-secondary me-2">Quay lại</a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-2"></i>Cập nhật
                </button>
            </div>
        </div>
    </form>
</div>
